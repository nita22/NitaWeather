<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nita22.app.nitaweather" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/weather"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.nita22.app.nitaweather.activity.ChooseAreaActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name="com.nita22.app.nitaweather.activity.WeatherActivity"></activity>

        <service android:name="com.nita22.app.nitaweather.service.AutoUpdateService"></service>

        <receiver android:name="com.nita22.app.nitaweather.receiver.AutoUpdateReceiver"></receiver>
        </application>

</manifest>
